# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def flatten(self, root: TreeNode) -> None:
        """
        Do not return anything, modify root in-place instead.
        """
        if not root:
            return 
        
        stack = [root]
        
        while stack:
            cur = stack.pop()
            
            if not cur.right and not cur.left and not stack: break
            
            if cur.right: stack.append(cur.right)
            if cur.left: stack.append(cur.left)
                
            if cur.left:
                cur.right = cur.left
            else:
                cur.right = stack[-1]
                
            cur.left = None
